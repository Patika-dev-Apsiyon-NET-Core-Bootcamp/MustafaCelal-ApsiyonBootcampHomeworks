@model ArticleViewModel

@{
    ViewData["Title"] = "AddArticle";
}

<h2>Makale Yazısı Ekle</h2>

<div class="container">
    <form asp-action="AddArticle" method="post">

        <div class="form-group">
            <label asp-for="ArticleTitle" class="control-label">Başlık:</label>
            <input asp-for="ArticleTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ArticleContent" class="control-label">İçerik:</label>
            <textarea asp-for="ArticleContent" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Categories" class="control-label">Mevcut Kategoriler:</label><br />
            <select asp-for="Categories" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))" multiple>
                @if (ViewBag.Categories == null)
                {
                    <option>Eklenmiş bir kategori yok!</option>
                }
            </select>

            @Html.ActionLink("Kategori Ekle", "AddCategory", "Category")
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Kaydet" />
        </div>
    </form>
</div>
